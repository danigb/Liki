- presenter = NodePresenter.new(@node, self)
- title(@node.title)

= render 'node_title', node: @node
= presenter.render_node
div.node-main-actions
  =' link_to 'Editar', [:edit, @node],
    class: 'pure-button' 
  - if @node.has_photos?
    = link_to 'Subir foto', '#', data: { action: 'add_photo',
      toggle: 'add_photo'}, class: 'pure-button'
    div[class='add_form add_photo'
      style='display: none']
      = render 'form_photo', node: @node
  = link_to "AÃ±adir #{children_name(@node)}", 
    new_node_path(p: @node),
    class: 'pure-button pure-button-secondary'

= presenter.render_children

- if @node.mentioned_by_nodes.size > 0
  div.separator
    = presenter.render_mentioned

div.separator
  = render 'following'

