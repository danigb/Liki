= simple_form_for node do |form|
  = form.input :title
  = form.input :body
  - if node.new_record? && node.parent_id.blank?
    = form.input(:parent_id, collection: current_space.node.children) 
  - else
    = form.input :parent_id, as: :hidden
  - if current_user.admin?
    p Eres administradora. Cuidado!
    = form.input :role

  div.add_image
    - if node.image?
      = image_tag(node.image.thumb.url, class: 'current')
    p Puedes subir una im√°gen desde tu dropbox:
    input[type="dropbox-chooser" name="selected-file"
      style="visibility: hidden;" data-link-type="direct"]
    p O desde tu ordenador:
    = form.input :image, label: false


  div.buttons = form.submit 'Guardar', class: 'button'

<script type="text/javascript" src="https://www.dropbox.com/static/api/1/dropins.js" id="dropboxjs" data-app-key="97zrc4q9b8q6ilx"></script>


