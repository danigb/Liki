doctype 5
html style="background-image: url('#{@background}');"
  head
    title = content_for(:title)
    link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700' rel='stylesheet' type='text/css'
    css:
      html {
        font-family: 'Source Sans Pro', 'Lucida Grande', Verdana, Helvetica, Arial;
        background: url('/Blank.JPG') no-repeat center center fixed; 
        background-size: cover;
      }
      html, body, div { margin: 0; padding: 0; font-size: 14px;}
      body, a { color: #333; }
      
      header { 
        width: 100%;
        height: 40px;
        background-color: white;
        border-bottom: 1px solid #dbdad7;
      }
      #column { 
        width: 640px; 
        background-color: white;
        padding: 40px 40px;
        margin: 0px auto; 
      }
      h1 { font-weight: normal; }

  body 
    header
    div#column
      == yield(:error)
